{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}

<div class="block mb-20">
  <div class="d-flex align-items-center">
    <h2 class="mb-0">Mon profil</h2>
    <img src="{{ app.user.picture }}" class="profile-picture ml-auto"> 
  </div>
  {{ form_start(form) }}
