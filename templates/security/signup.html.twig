{% extends "base.html.twig" %}
{% block title %}Inscription{% endblock %}

{% block body %}
  <div class="block">
    <h2 class="pb-30">Inscription</h2>

    {% for message in app.flashes('success') %}
      <div class="alert alert-success">
          {{ message }}
      </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="alert alert-danger">
          {{ message }}
      </div>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_rest(form) }}
    <button class="btn btn-primary mr-10">Inscription</button>
    <small>
      <a href="{{ path('login') }}">Vous avez déjà un compte ?</a>
    </small>
    {{ form_end(form)}}
  </div>
{% endblock %}
